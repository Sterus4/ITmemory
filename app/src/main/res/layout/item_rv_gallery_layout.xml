<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/gallery_card_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/gainsborough"
        app:cardElevation="10dp"
        app:cardCornerRadius="30dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true">
        <ImageView
            android:id="@+id/gallery_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            tools:src = "@drawable/ic_wikipedia_logo__svg_"
            android:adjustViewBounds="true"
            />
        <ImageButton
            android:id="@+id/more_information_photo_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:minHeight="40dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background = "@drawable/more_information_round_button"
            android:src="@drawable/ic_baseline_arrow_outward_24"
            android:elevation="7dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/gallery_image_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gallery_card_view"
        app:layout_constraintStart_toStartOf="@id/gallery_card_view"
        app:layout_constraintEnd_toEndOf="@id/gallery_card_view"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        tools:text = "testTest"
        android:textSize="17sp"
        android:fontFamily="@font/pt_serif_web_regular"
        />
</androidx.constraintlayout.widget.ConstraintLayout>